<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ToastLayout">

    <TextView
        android:id="@+id/toastTextView"
        android:layout_width="235dp"
        android:layout_height="35dp"
        android:layout_marginStart="176dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="40dp"
        android:text="Wrong User/Password"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.763"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ImageViewToast"
        android:layout_width="37dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/ic_baseline_error_24"
        app:layout_constraintBottom_toBottomOf="@+id/toastTextView"
        app:layout_constraintStart_toEndOf="@+id/toastTextView"
        app:layout_constraintTop_toTopOf="@+id/toastTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>